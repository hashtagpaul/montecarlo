import React, { useState, useEffect, useMemo } from 'react';
import { 
  LineChart, Line, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer, 
  BarChart, Bar, Cell, AreaChart, Area, Legend 
} from 'recharts';
import { 
  TrendingUp, 
  Settings2, 
  Activity, 
  PieChart, 
  Info, 
  RefreshCw,
  Building2,
  Percent,
  Sparkles,
  BrainCircuit,
  MessageSquareText,
  Loader2,
  Euro,
  Gauge
} from 'lucide-react';

// --- Configuration API Gemini ---
const apiKey = "";

const callGemini = async (prompt, systemInstruction = "", isJson = false) => {
  const model = "gemini-2.5-flash-preview-09-2025";
  let retries = 0;
  const maxRetries = 5;

  const payload = {
    contents: [{ parts: [{ text: prompt }] }],
    systemInstruction: { parts: [{ text: systemInstruction }] }
  };

  if (isJson) {
    payload.generationConfig = {
      responseMimeType: "application/json"
    };
  }

  while (retries < maxRetries) {
    try {
      const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/${model}:generateContent?key=${apiKey}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });
      
      if (!response.ok) throw new Error('API Error');
      
      const result = await response.json();
      return result.candidates?.[0]?.content?.parts?.[0]?.text;
    } catch (error) {
      retries++;
      const delay = Math.pow(2, retries) * 500;
      await new Promise(res => setTimeout(res, delay));
    }
  }
  throw new Error("Impossible de contacter l'IA après plusieurs tentatives.");
};

// --- Utilitaires Mathématiques ---
const randomNormal = (mean, stdDev) => {
  const u1 = Math.random();
  const u2 = Math.random();
  const z = Math.sqrt(-2.0 * Math.log(u1)) * Math.cos(2.0 * Math.PI * u2);
  return z * stdDev + mean;
};

const simulateCIRPath = (r0, kappa, theta, sigma, steps) => {
  const path = [r0];
  const dt = 1;
  let currentR = r0;
  for (let i = 1; i <= steps; i++) {
    const dw = randomNormal(0, 1);
    const dr = kappa * (theta - currentR) * dt + sigma * Math.sqrt(Math.max(currentR, 0)) * dw;
    currentR = Math.max(currentR + dr, 0.0001);
    path.push(currentR);
  }
  return path;
};

const App = () => {
  // --- État de l'Application ---
  const [params, setParams] = useState({
    initialRent: 100000,
    holdingPeriod: 10,
    rentGrowthMean: 0.02,
    rentGrowthSD: 0.01,
    cir_r0: 0.03,
    cir_kappa: 0.2,
    cir_theta: 0.04,
    cir_sigma: 0.02,
    riskPremiumMean: 0.025,
    riskPremiumSD: 0.005,
    terminalCapRateMean: 0.06,
    terminalCapRateSD: 0.005,
    numSimulations: 1000
  });

  const [results, setResults] = useState(null);
  const [isSimulating, setIsSimulating] = useState(false);
  
  // États Gemini
  const [propertyDesc, setPropertyDesc] = useState("");
  const [aiAnalysis, setAiAnalysis] = useState("");
  const [isAiLoading, setIsAiLoading] = useState(false);

  // --- Logique de Simulation ---
  const runSimulation = () => {
    setIsSimulating(true);
    setTimeout(() => {
      const finalValues = [];
      const samplePaths = [];
      for (let s = 0; s < params.numSimulations; s++) {
        const rates = simulateCIRPath(params.cir_r0, params.cir_kappa, params.cir_theta, params.cir_sigma, params.holdingPeriod);
        let currentRent = params.initialRent;
        let presentValue = 0;
        const yearByYearData = [];
        for (let t = 1; t <= params.holdingPeriod; t++) {
          const growth = randomNormal(params.rentGrowthMean, params.rentGrowthSD);
          currentRent *= (1 + growth);
          const premium = randomNormal(params.riskPremiumMean, params.riskPremiumSD);
          const discountRate = rates[t] + premium;
          const pvFactor = Math.pow(1 + discountRate, -t);
          presentValue += currentRent * pvFactor;
          if (s < 5) yearByYearData.push({ year: t, rent: currentRent, rate: discountRate });
        }
        const exitCapRate = randomNormal(params.terminalCapRateMean, params.terminalCapRateSD);
        const terminalValue = currentRent / exitCapRate;
        const discountRateFinal = rates[params.holdingPeriod] + randomNormal(params.riskPremiumMean, params.riskPremiumSD);
        presentValue += terminalValue * Math.pow(1 + discountRateFinal, -params.holdingPeriod);
        finalValues.push(presentValue);
        if (s < 5) samplePaths.push(yearByYearData);
      }
      finalValues.sort((a, b) => a - b);
      const mean = finalValues.reduce((a, b) => a + b, 0) / finalValues.length;
      const median = finalValues[Math.floor(finalValues.length / 2)];
      const ciLo = finalValues[Math.floor(finalValues.length * 0.05)];
      const ciHi = finalValues[Math.floor(finalValues.length * 0.95)];
      const bins = 20;
      const min = finalValues[0];
      const max = finalValues[finalValues.length - 1];
      const binWidth = (max - min) / bins;
      const histogram = Array.from({ length: bins }, (_, i) => ({
        range: `${Math.round((min + i * binWidth) / 1000)}k`,
        count: 0,
        value: min + (i + 0.5) * binWidth
      }));
      finalValues.forEach(v => {
        let b = Math.floor((v - min) / binWidth);
        if (b === bins) b--;
        histogram[b].count++;
      });
      setResults({ mean, median, ciLo, ciHi, histogram, samplePaths });
      setIsSimulating(false);
    }, 100);
  };

  // Calcul du Yield (Taux de rendement initial)
  const initialYield = useMemo(() => {
    if (!results || !params.initialRent) return 0;
    return (params.initialRent / results.mean);
  }, [results, params.initialRent]);

  // --- Fonctionnalités Gemini ---
  
  const handleAiAnalysis = async () => {
    if (!results) return;
    setIsAiLoading(true);
    setAiAnalysis("");
    
    const prompt = `Voici les résultats d'une simulation Monte Carlo pour un actif immobilier :
    - Valeur estimée moyenne : ${formatCurrency(results.mean)}
    - Loyer initial simulé : ${formatCurrency(params.initialRent)}
    - Yield initial (Rendement) : ${formatPercent(initialYield)}
    - Intervalle de confiance 90% : [${formatCurrency(results.ciLo)} - ${formatCurrency(results.ciHi)}]
    - Période de détention : ${params.holdingPeriod} ans
    
    Analyse la robustesse de cette évaluation. Le yield est-il cohérent avec le marché ? Quels sont les risques sur les flux de loyers ? Donne 3 points de vigilance.`;

    const systemPrompt = "Tu es un expert analyste financier immobilier (CFA). Réponds de manière concise, structurée et professionnelle en français.";

    try {
      const response = await callGemini(prompt, systemPrompt);
      setAiAnalysis(response);
    } catch (e) {
      setAiAnalysis("Erreur : Impossible de générer l'analyse.");
    } finally {
      setIsAiLoading(false);
    }
  };

  const handleSuggestParams = async () => {
    if (!propertyDesc) return;
    setIsAiLoading(true);
    
    const prompt = `Estime des paramètres financiers réalistes pour ce bien : "${propertyDesc}". 
    Inclus une estimation du loyer annuel total.
    Retourne uniquement un objet JSON.
    Exemple de JSON attendu : { 
      "initialRent": 120000, 
      "rentGrowthMean": 0.02, 
      "riskPremiumMean": 0.03, 
      "terminalCapRateMean": 0.05, 
      "explanation": "courte phrase justifiant le loyer et le yield de marché estimé" 
    }`;

    const systemPrompt = "Tu es un expert en évaluation immobilière. Tu dois répondre uniquement par un objet JSON valide.";

    try {
      const response = await callGemini(prompt, systemPrompt, true);
      const data = JSON.parse(response);
      setParams(prev => ({
        ...prev,
        initialRent: data.initialRent ?? prev.initialRent,
        rentGrowthMean: data.rentGrowthMean ?? prev.rentGrowthMean,
        riskPremiumMean: data.riskPremiumMean ?? prev.riskPremiumMean,
        terminalCapRateMean: data.terminalCapRateMean ?? prev.terminalCapRateMean
      }));
      setAiAnalysis(`✨ Paramètres et loyer mis à jour pour : ${propertyDesc}. \n\nNote de l'expert : ${data.explanation || ""}`);
      // On relance la simulation automatiquement après la mise à jour des paramètres par l'IA
      runSimulation();
    } catch (e) {
      setAiAnalysis("Erreur lors de la suggestion des paramètres.");
    } finally {
      setIsAiLoading(false);
    }
  };

  useEffect(() => { runSimulation(); }, []);

  const formatCurrency = (val) => new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR', maximumFractionDigits: 0 }).format(val);
  const formatPercent = (val) => (val * 100).toFixed(2) + '%';

  return (
    <div className="min-h-screen bg-slate-50 p-4 md:p-8 font-sans text-slate-900">
      <div className="max-w-6xl mx-auto space-y-8">
        
        {/* Header */}
        <header className="flex flex-col md:flex-row md:items-center justify-between gap-4">
          <div>
            <h1 className="text-3xl font-bold text-slate-800 flex items-center gap-2">
              <Building2 className="text-blue-600" />
              IA & Évaluation Monte Carlo
            </h1>
            <p className="text-slate-500 mt-1">
              Modèle APV avec assistant loyer & yield prédictif ✨
            </p>
          </div>
          <button 
            onClick={runSimulation}
            disabled={isSimulating}
            className="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium shadow-sm transition-all flex items-center justify-center gap-2 disabled:opacity-50"
          >
            <RefreshCw className={isSimulating ? "animate-spin" : ""} size={18} />
            Calculer Simulation
          </button>
        </header>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          
          {/* Settings Panel */}
          <div className="lg:col-span-1 space-y-6">
            <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-200 h-fit space-y-6">
              <h2 className="text-lg font-semibold flex items-center gap-2 border-b pb-2">
                <Settings2 size={20} className="text-blue-500" />
                Configuration
              </h2>

              <div className="space-y-4">
                {/* Assistant IA Étendu */}
                <div className="bg-blue-50 p-4 rounded-xl border border-blue-100 space-y-3">
                  <label className="text-xs font-bold text-blue-600 uppercase flex items-center gap-1">
                    <Sparkles size={14} /> Expert Loyer & Marché ✨
                  </label>
                  <textarea 
                    value={propertyDesc}
                    onChange={(e) => setPropertyDesc(e.target.value)}
                    placeholder="Ex: Immeuble de bureaux 2000m² à Lyon Part-Dieu, loué à 90%..."
                    className="w-full text-sm p-2 rounded-lg border-blue-200 border bg-white focus:outline-none focus:ring-2 ring-blue-500"
                    rows="3"
                  />
                  <p className="text-[10px] text-blue-400 italic">L'IA estimera le loyer annuel et les taux de risque.</p>
                  <button 
                    onClick={handleSuggestParams}
                    disabled={isAiLoading || !propertyDesc}
                    className="w-full py-2 bg-blue-600 text-white text-xs font-bold rounded-lg hover:bg-blue-700 transition flex items-center justify-center gap-2 shadow-sm"
                  >
                    {isAiLoading ? <Loader2 size={14} className="animate-spin" /> : <BrainCircuit size={14} />}
                    Estimer Loyer & Risques
                  </button>
                </div>

                {/* Manual Inputs */}
                <div className="space-y-3">
                  <div className="bg-slate-50 p-3 rounded-lg border border-slate-200">
                    <label className="text-[10px] block text-slate-400 font-bold uppercase mb-1">Loyer Annuel (€)</label>
                    <div className="flex items-center gap-2">
                      <Euro size={16} className="text-slate-400" />
                      <input 
                        type="number" 
                        value={params.initialRent} 
                        onChange={e => setParams({...params, initialRent: Number(e.target.value)})} 
                        className="w-full bg-transparent font-bold text-lg outline-none"
                      />
                    </div>
                  </div>
                  
                  <div className="grid grid-cols-2 gap-3">
                    <div className="bg-slate-50 p-2 rounded border">
                      <span className="text-[10px] block text-slate-400 font-bold uppercase">Détention</span>
                      <input type="number" value={params.holdingPeriod} onChange={e => setParams({...params, holdingPeriod: Number(e.target.value)})} className="w-full bg-transparent font-medium text-sm outline-none"/>
                    </div>
                    <div className="bg-slate-50 p-2 rounded border">
                      <span className="text-[10px] block text-slate-400 font-bold uppercase">Croissance</span>
                      <input type="number" step="0.001" value={params.rentGrowthMean} onChange={e => setParams({...params, rentGrowthMean: Number(e.target.value)})} className="w-full bg-transparent font-medium text-sm outline-none"/>
                    </div>
                  </div>
                </div>

                <div className="space-y-2 pt-2">
                  <label className="text-xs font-bold text-slate-500 uppercase flex items-center gap-1">
                    <Activity size={14} /> Taux Sans Risque (Modèle CIR)
                  </label>
                  <div className="grid grid-cols-2 gap-2">
                    <div className="bg-slate-50/50 p-2 rounded border border-slate-100">
                      <span className="text-[10px] block text-slate-400 italic">Initial (r0)</span>
                      <input type="number" step="0.01" value={params.cir_r0} onChange={e => setParams({...params, cir_r0: Number(e.target.value)})} className="w-full bg-transparent text-sm"/>
                    </div>
                    <div className="bg-slate-50/50 p-2 rounded border border-slate-100">
                      <span className="text-[10px] block text-slate-400 italic">Volatilité (σ)</span>
                      <input type="number" step="0.01" value={params.cir_sigma} onChange={e => setParams({...params, cir_sigma: Number(e.target.value)})} className="w-full bg-transparent text-sm"/>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            {/* AI Analysis Result */}
            <div className="bg-slate-800 text-white p-6 rounded-2xl shadow-xl space-y-4">
              <h3 className="font-bold flex items-center gap-2 text-blue-400 uppercase text-xs tracking-wider">
                <MessageSquareText size={18} />
                Synthèse Stratégique
              </h3>
              {aiAnalysis ? (
                <div className="text-sm leading-relaxed text-slate-300 whitespace-pre-wrap animate-in fade-in slide-in-from-bottom-2 duration-700">
                  {aiAnalysis}
                </div>
              ) : (
                <p className="text-slate-500 text-xs italic">
                  Utilisez l'assistant de marché ou lancez l'analyse pour voir apparaître les recommandations.
                </p>
              )}
              <button 
                onClick={handleAiAnalysis}
                disabled={isAiLoading || !results}
                className="w-full py-3 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl text-sm font-bold shadow-lg flex items-center justify-center gap-2 hover:from-blue-500 hover:to-indigo-500 transition-all border border-blue-400/20"
              >
                {isAiLoading ? <Loader2 className="animate-spin" size={18}/> : <Sparkles size={18}/>}
                Lancer l'Analyse IA
              </button>
            </div>
          </div>

          {/* Results Content */}
          <div className="lg:col-span-2 space-y-8">
            {/* KPI Cards */}
            {results && (
              <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <div className="bg-white p-4 rounded-xl shadow-sm border border-slate-200">
                  <p className="text-[10px] font-bold text-slate-400 uppercase">Valeur de l'Actif</p>
                  <p className="text-xl font-bold text-blue-600">{formatCurrency(results.mean)}</p>
                </div>
                <div className="bg-white p-4 rounded-xl shadow-sm border border-slate-200 border-l-4 border-l-amber-400">
                  <p className="text-[10px] font-bold text-slate-400 uppercase flex items-center gap-1">
                    <Gauge size={12} className="text-amber-500" />
                    Yield Initial
                  </p>
                  <p className="text-xl font-bold text-slate-800">{formatPercent(initialYield)}</p>
                </div>
                <div className="bg-white p-4 rounded-xl shadow-sm border border-slate-200">
                  <p className="text-[10px] font-bold text-slate-400 uppercase">Scénario Bas (5%)</p>
                  <p className="text-lg font-bold text-slate-600">{formatCurrency(results.ciLo)}</p>
                </div>
                <div className="bg-white p-4 rounded-xl shadow-sm border border-slate-200">
                  <p className="text-[10px] font-bold text-slate-400 uppercase">Scénario Haut (95%)</p>
                  <p className="text-lg font-bold text-slate-600">{formatCurrency(results.ciHi)}</p>
                </div>
              </div>
            )}

            {/* Main Chart - Distribution */}
            <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
              <div className="flex justify-between items-center mb-6">
                <h3 className="text-lg font-semibold flex items-center gap-2">
                  <PieChart size={20} className="text-blue-500" />
                  Probabilités de Valorisation
                </h3>
                {results && (
                  <div className="px-3 py-1 bg-slate-100 rounded-full text-[10px] font-bold text-slate-500 uppercase">
                    {params.numSimulations} Scénarios
                  </div>
                )}
              </div>
              <div className="h-[300px] w-full">
                {results && (
                  <ResponsiveContainer width="100%" height="100%">
                    <BarChart data={results.histogram}>
                      <CartesianGrid strokeDasharray="3 3" vertical={false} stroke="#f1f5f9" />
                      <XAxis dataKey="range" fontSize={12} tickLine={false} axisLine={false} />
                      <YAxis hide />
                      <Tooltip 
                        cursor={{fill: '#f8fafc'}}
                        content={({ active, payload }) => {
                          if (active && payload && payload.length) {
                            return (
                              <div className="bg-white p-2 border shadow-sm rounded-lg text-sm font-medium">
                                {payload[0].value} simulations
                              </div>
                            );
                          }
                          return null;
                        }}
                      />
                      <Bar dataKey="count" radius={[4, 4, 0, 0]}>
                        {results.histogram.map((entry, index) => (
                          <Cell 
                            key={`cell-${index}`} 
                            fill={entry.value < results.ciLo || entry.value > results.ciHi ? '#e2e8f0' : '#3b82f6'} 
                          />
                        ))}
                      </Bar>
                    </BarChart>
                  </ResponsiveContainer>
                )}
              </div>
              <div className="flex justify-between mt-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest px-2">
                <span>Risque de perte</span>
                <span className="text-blue-500">Intervalle de confiance 90%</span>
                <span>Potentiel de gain</span>
              </div>
            </div>

            {/* Detail Charts */}
            <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <h3 className="text-xs font-bold text-slate-400 mb-4 uppercase flex items-center gap-2">
                  <Activity size={16} /> Tunnel de Taux (Modèle CIR)
                </h3>
                <div className="h-[180px] w-full">
                  {results && (
                    <ResponsiveContainer width="100%" height="100%">
                      <LineChart>
                        <XAxis dataKey="year" domain={[1, params.holdingPeriod]} fontSize={10} />
                        <YAxis fontSize={10} tickFormatter={v => `${(v * 100).toFixed(0)}%`} />
                        {results.samplePaths.map((path, i) => (
                          <Line key={i} data={path} type="monotone" dataKey="rate" stroke={i === 0 ? "#3b82f6" : "#cbd5e1"} dot={false} strokeWidth={i === 0 ? 2 : 1} isAnimationActive={false}/>
                        ))}
                      </LineChart>
                    </ResponsiveContainer>
                  )}
                </div>
              </div>
              <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <h3 className="text-xs font-bold text-slate-400 mb-4 uppercase flex items-center gap-2">
                  <TrendingUp size={16} /> Projection des Loyers Simulés
                </h3>
                <div className="h-[180px] w-full">
                  {results && (
                    <ResponsiveContainer width="100%" height="100%">
                      <AreaChart>
                        <XAxis dataKey="year" domain={[1, params.holdingPeriod]} fontSize={10} />
                        <YAxis fontSize={10} tickFormatter={v => `${v/1000}k`} />
                        {results.samplePaths.map((path, i) => (
                          <Area key={i} data={path} type="step" dataKey="rent" stroke={i === 0 ? "#3b82f6" : "#cbd5e1"} fill={i === 0 ? "rgba(59, 130, 246, 0.1)" : "transparent"} dot={false} isAnimationActive={false}/>
                        ))}
                      </AreaChart>
                    </ResponsiveContainer>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default App;
